# Google Cloud Project設定
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-northeast1

# Secret Manager シークレット名
SECRET_DISCORD_WEBHOOK_URL=discord-webhook-url
SECRET_GEMINI_API_KEY=gemini-api-key

# 設定ファイルURL（GitHub raw file URL）
CONFIG_URL=https://raw.githubusercontent.com/yourusername/rss-article-curator/main/config.json

# Firestore設定
FIRESTORE_DATABASE_ID=(default)

# ローカル開発用（オプション）
USE_LOCAL_CONFIG=true
LOCAL_CONFIG_PATH=./config.json
